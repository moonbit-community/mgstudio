set -euo pipefail

# Repo developer wrapper: builds `mgstudio-cli` (release) on demand, then runs it.

# Resolve symlinks so this wrapper keeps working when installed via `ln -s`.
SOURCE="${BASH_SOURCE[0]}"
while [[ -h "${SOURCE}" ]]; do
  DIR="$(cd -P -- "$(dirname -- "${SOURCE}")" && pwd)"
  SOURCE="$(readlink "${SOURCE}")"
  [[ "${SOURCE}" != /* ]] && SOURCE="${DIR}/${SOURCE}"
done
ROOT="$(cd -P -- "$(dirname -- "${SOURCE}")" && pwd)"
BIN="${ROOT}/mgstudio-cli/_build/native/release/build/main/main.exe"

NEED_BUILD=0
if [[ ! -x "${BIN}" ]]; then
  NEED_BUILD=1
else
  # Rebuild when CLI sources changed since last build.
  if find "${ROOT}/mgstudio-cli/main" -type f \( -name '*.mbt' -o -name 'moon.pkg.json' \) -newer "${BIN}" | grep -q .; then
    NEED_BUILD=1
  fi
  # Rebuild when native runtime sources changed (path dependency of mgstudio-cli).
  if find "${ROOT}/mgstudio-runtime/native" -type f \( -name '*.mbt' -o -name '*.c' -o -name 'moon.pkg.json' -o -name 'moon.mod.json' \) -newer "${BIN}" | grep -q .; then
    NEED_BUILD=1
  fi
  # Rebuild when runtime-core sources changed (path dependency of native runtime).
  if find "${ROOT}/mgstudio-runtime/core" -type f \( -name '*.mbt' -o -name 'moon.pkg.json' -o -name 'moon.mod.json' \) -newer "${BIN}" | grep -q .; then
    NEED_BUILD=1
  fi
  if [[ "${ROOT}/mgstudio-cli/moon.mod.json" -nt "${BIN}" ]]; then
    NEED_BUILD=1
  fi
fi

if [[ "${NEED_BUILD}" -eq 1 ]]; then
  (cd "${ROOT}/mgstudio-cli" && moon build --release)
fi

exec "${BIN}" "$@"
